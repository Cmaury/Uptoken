block head
div.navbar-fixed-top.navbar
	div.navbar-inner
		div.container
			a.brand(href="/") UpToken.org
			ul.nav.pull-right
				- if (!everyauth.loggedIn)
					li#login
						a(href='/auth/facebook', style='border: 0px')
							img(style='border: 0px', src='/images/login-facebook.png')
				-else
					-if (user.fb.name.first)
						a.brand(href="/user/profile")= user.fb.name.first
						
					-else	
						a.brand(href="/user/profile")= user.login	
					li
						a(href='/logout') Logout